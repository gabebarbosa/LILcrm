<%= nav_bar brand: "lilCRM", brand_link: root_url do %>
      <%= menu_group pull: :left  do %>
          <% if logged_in? %>
            <%= menu_item " Atendimentos", atendimentos_path, class: 'fa fa-book' %>
            <%= menu_item " Clientes", clientes_path, class: 'fa fa-users' %>
            <%= menu_item " Catacteristicas", caracteristicas_path, class: 'fa fa-tags' %>
            <%= menu_item " Tipos de atendimentos", tipoatendimentos_path, class: 'fa fa-bookmark' %>
          <% end %>
       <% end %>
      <%= menu_group pull: :right  do %>
          <% if logged_in? %>
            <%= menu_item " "+current_user.email, edit_user_path(current_user), class: 'fa fa-user' %>
            <%= menu_item " Sair", sign_out_path, method: "delete", class: 'fa fa-times' %>
          <% else %>
            <%= menu_item "Entrar", root_path %>
          <% end %>
       <% end %>
<% end %>

