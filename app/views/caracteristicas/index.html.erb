<p id="notice"><%= notice %></p>


<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-9">
        <% button_to "Nova Caracteristica", new_caracteristica_path, :method => "get", class: "btn btn-default btn-xs" %>
        <% link_to 'Nova Caracteristica', new_caracteristica_path %>
        <%= link_to " Nova Caracteristica", new_caracteristica_path, :method => "get", class: " fa fa-plus-circle btn btn-default btn-xs"%> 
      </div>
      <div align="right" class="col-md-3">
        <%= form_tag caracteristicas_path, method: :get do  %>
          <div class="input-group input-group-sm">
              <span class="input-group-addon" id="sizing-addon3"><i class="fa fa-search label-tema" aria-hidden="true"></i></span>
              <%= text_field_tag :descricao, @descricao_buscar, class: "form-control", placeholder: "buscar caracteristicas ... " %>
              <% button_to "Buscar", nil, class: "fa fa-search btn btn-defaut btn-xs" %>
          </div>   
        <% end %>
      </div>
    </div>  
  </div>
</div>


<table class="table table-condensed table-hover">
  <tbody>
    <% @caracteristicas.each do |caracteristica| %>
      <tr>
        <td><i class="fa fa-tags label-tema" aria-hidden="true"></i> <%= caracteristica.descricao %></td>
        <td align="right">
          <%= link_to 'Editar', edit_caracteristica_path(caracteristica), class: " fa fa-pencil-square-o btn btn-default btn-xs" %>
          <% link_to 'ver', caracteristica %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



