<p id="notice"><%= notice %></p>

<h1>Caracteristicas</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caracteristicas.each do |caracteristica| %>
      <tr>
        <td><%= caracteristica.descricao %></td>
        <td><%= link_to 'ver', caracteristica %></td>
        <td><%= link_to 'Editar', edit_caracteristica_path(caracteristica) %></td>
        <td><%= link_to 'Deletar', caracteristica, method: :delete, data: { confirm: 'tem certeza que deseja deletar a caracteristica?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Caracteristica', new_caracteristica_path %>
