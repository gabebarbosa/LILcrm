<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
  <div class="row">
    <div class="col-md-3">
      <%= button_to "Novo Atendimento", new_atendimento_path, :method => "get", class: "btn btn-default btn-xs " %> 
    </div>
  </div>   

  </div>
</div>

<div class="row">
    <% @atendimentos.each do |atendimento| %>
    <div class="col-md-3">
          <ul class="small list-group">
            <li class="list-group-item">
              <span class="label label-info" title="Atendimento em Aberto"><i class="fa fa-unlock" aria-hidden="true"></i> Nº <%= atendimento.id %></span>
              <%= atendimento.tipoatendimento.descricao %>
            </li>
            <li class="list-group-item"><%= atendimento.assunto %> <br><%= atendimento.cliente.nome %></li>
            <li class="list-group-item">
              <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target= <%= "#" + atendimento.id.to_s %> ><i class="fa fa-eye" aria-hidden="true"></i></button>
              <i class="fa fa-comments" aria-hidden="true"><%= atendimento.comentarios.count %></i>
            </li>
          </ul>
    </div>



    <div id=<%= atendimento.id.to_s %> class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 align="center" class="label-tema modal-title"><i class="fa fa-eye" aria-hidden="true"></i> Atendimento Nº <%= atendimento.id %></h4>
          </div>
          <div class="modal-body">
            <div class="panel panel-default">
              <div class="panel-body">
                <p>
                  <span class="label label-info" title="Atendimento em Aberto"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                  <span class="label label-info" title="Atendimento em Aberto"><i class="fa fa-calendar" aria-hidden="true"></i> aberto em <%= post_date atendimento.created_at %></span>
                </p>
                <p><i class="fa fa-user label-tema " aria-hidden="true"></i> <%= atendimento.user.email %></p>
                <p><strong>Cliente:</strong><%= atendimento.cliente.nome %></p>
                <p><strong>Tipo de atendimento:</strong><%= atendimento.tipoatendimento.descricao %></p>
                <p><strong>Assunto:</strong><%= atendimento.assunto %></p>
                <p><strong>Descricao:</strong><%= atendimento.descricao %></p>
              </div>
            </div>


            <div class="panel panel-default">
              <table class="table table-condensed">
                <thead>
                  <tr>
                    <th><i class="fa fa-comments" aria-hidden="true"></i> Comentários</th>
                  </tr>
                  <tr>
                    <th><%= link_to 'Adicionar comentário', atendimento, class: "label-tema btn btn-default btn-xs" %></th>
                  </tr>
                </thead>

                <tbody>
                  <% atendimento.comentarios.each do |comentario| %>
                    <tr>
                      <td class="small">
                        <div class="row">
                          <div class="col-md-6">
                          <p>
                            <i class="fa fa-user label-tema " aria-hidden="true"></i>
                            <strong>  <%= comentario.user %></strong> 
                          </p>
                             
                          </div>
                          <div align="right" class="col-md-6">
                            <i class="fa fa-calendar label-tema " aria-hidden="true"></i>
                            <%= post_date comentario.created_at %> 
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                            <%= comentario.descricao %>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>


          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
          </div>
        </div>
      </div>
    </div>

    <% end %>
</div>


