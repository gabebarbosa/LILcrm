<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
  <div class="row">
    <div class="col-md-4">
      <h4><small>Listando atendimentos</small></h4>
    </div>
    <div class="col-md-6">
      <%= button_to "Novo Atendimento", new_atendimento_path, :method => "get", class: "btn btn-primary btn-xs " %> 
    </div>
  </div>   

  </div>
</div>

<div class="row">
    <% @atendimentos.each do |atendimento| %>
    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <span class="label label-info">Nº <%= atendimento.id %></span>
          <b>Cliente:</b> <%= atendimento.cliente.nome %>
        </div>
        <div class="panel-body"> 
          <p><b>Assunto:</b> <%= atendimento.assunto %><br>   
          <b>Usuário:</b> <%= atendimento.user.email %><br> 
          <b>Criado em:</b> <%= post_date atendimento.created_at %></p> 
        </div>
        <div align="center" class="panel-footer">
          <%= link_to 'Ver Atendimento', atendimento, class: "btn btn-default btn-xs" %>
        </div>
      </div>
    </div>
    <% end %>
</div>


